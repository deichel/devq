<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.devq.MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/matrix"
        android:contentDescription="background_image" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="TO START
PRESS ANY KEY!"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#00FF00"
        android:typeface="monospace"/>
    <ImageButton
        android:id="@+id/btnYoda"
        android:background="#00000000"
        android:src="@drawable/yoda_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:alpha="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnQuotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANY KEY"
        android:alpha="0.5"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:background="#00000000"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/android_share"
        android:id="@+id/btnShare"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1" />
</RelativeLayout>
